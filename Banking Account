# MakeWithdrawals


class Account():

    saving = ""
    Withdrawals_number = 0
    Active = False

    def apply(self):

        self.account_Active = False

class Saving(Account):

    Account = ""

    def apply(self):

        if self.Account == "":
            self.account_Active = False
        else:
            super().apply()

