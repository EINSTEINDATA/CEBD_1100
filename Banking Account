# Make Deposit

 def deposit(self):
        amount = float(input("Enter your amount to be Deposited: >= 0"))
        self.balance += amount
        print("New Amount Deposit", amount)

#makeWithdraw

def withdraw(self):
    amount = float(input("Enter your amount to be Withdrawn: "))
    if self.balance >= amount:
        self.balance -= amount
        print("Your new account balance:", amount)
    else:
        print("Insufficient balance  ")

#calculInterest
#Monthly Interest rate = (Annual Interest Rate / 12)
#Monthly Interest = Balance * Monthly Interest Rate
#Balance = Balance + Monthyl Interest

rate = 2.00
time_months = 12

def compound_interest(account, rate, time_months):
    result = account * (compound_interest((1 + rate / 100), time_months))
    return result

a = float(input("Enter the balance account: "))
r = float(input("Enter the interest rate: "))
t = float(input("Enter the time_months: "))

amount = compound_interest(a, r, t)
interest = amount - a
print("Compound amount is %.2f" % amount)
print("Compound interest is %.2f" % interest)

def add_rate(amount):
    return amount * rate

def build_name(f_name: str, l_name: str):
    return f_name + " " + l_name

print("The amount 100 plus rate is " + str(add_rate(100)))

print(build_name("Chequing", "Saving"))

